{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "npm install",
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Start Coolhole Chatbot",
			"type": "shell",
			"command": "npm start",
			"isBackground": false,
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"dependsOn": "Install Dependencies"
		},
		{
			"label": "Start Development Server",
			"type": "shell",
			"command": "npm run dev",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"dependsOn": "Install Dependencies"
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "npm test",
			"group": "test",
			"dependsOn": "Install Dependencies"
		}
	]
}