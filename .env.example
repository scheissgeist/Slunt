# ============================================
# SLUNT MULTI-PLATFORM CONFIGURATION
# ============================================

# Environment Configuration
NODE_ENV=development
PORT=3000

# ============================================
# VOICE (OpenAI TTS for /api/voice)
# ============================================
# Provide your OpenAI API key to enable server-side TTS responses.
# If missing, the voice demo will fall back to browser speech synthesis.
OPENAI_API_KEY=
ENABLE_VOICE=true
VOICE_STT_PROVIDER=browser
VOICE_TTS_PROVIDER=openvoice
VOICE_OPENAI_VOICE=verse
VOICE_OPENAI_SPEED=1.1
VOICE_LITE=true

# OpenVoice TTS (Local, Free, Voice Cloning) - for VOICE_TTS_PROVIDER=openvoice
# AUTO-STARTS when you run 'npm start' (no need to manually start!)
OPENVOICE_SERVER_URL=http://localhost:3002
# Path to reference voice sample (3-10 seconds of clean speech)
# Place your voice samples in: OpenVoice/voice_references/slunt/
# Example: OPENVOICE_REFERENCE_VOICE=OpenVoice/voice_references/slunt/slunt_normal_01.wav
OPENVOICE_REFERENCE_VOICE=
OPENVOICE_LANGUAGE=EN

# ElevenLabs TTS (for VOICE_TTS_PROVIDER=elevenlabs)
ELEVENLABS_API_KEY=
# Voice ID (string like 21m00Tcm4TlvDq8ikWAM). Find it in ElevenLabs > Voices > Share > "Voice ID".
# David's Voice ID (for reference): XusZimPAb50wPl00sLE6
ELEVENLABS_VOICE_ID=oH8YmZXJYEZq5ScgoGn9
ELEVENLABS_BACKUP_VOICE_ID=
ELEVENLABS_MODEL=eleven_multilingual_v2
ELEVENLABS_STABILITY=0.4
ELEVENLABS_SIMILARITY=0.8

# ============================================
# DISCORD CONFIGURATION
# ============================================
# Get these from: https://discord.com/developers/applications
# 1. Create a new application
# 2. Go to "Bot" section and create a bot
# 3. Copy the bot token (keep this secret!)
# 4. Copy the application ID from "General Information"
# 5. Enable these intents: Server Members, Message Content
# 6. Invite bot using: https://discord.com/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=412317273088&scope=bot

DISCORD_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_GUILD_IDS=

# ============================================
# TWITCH CONFIGURATION
# ============================================
# Get OAuth token from: https://twitchtokengenerator.com/
# OR create your own app at: https://dev.twitch.tv/console/apps
# 
# Quick Method (twitchtokengenerator.com):
# 1. Go to https://twitchtokengenerator.com/
# 2. Select "Bot Chat Token"
# 3. Authorize with your bot account
# 4. Copy the token (starts with "oauth:")
#
# Username: Your bot's Twitch username (lowercase)
# OAuth: The token from token generator (starts with "oauth:")
# Channels: Comma-separated list of channels to join (without #)

TWITCH_USERNAME=
TWITCH_OAUTH_TOKEN=
TWITCH_CHANNELS=

# ============================================
# COOLHOLE/CYTUBE CONFIGURATION
# ============================================

# CyTube Configuration
CYTUBE_SERVER=wss://cytu.be/socketio/
CYTUBE_CHANNEL=coolhole
CYTUBE_USERNAME=CoolholeBot
CYTUBE_PASSWORD=

# Coolhole Playwright automation
# Default headless for stability; set to false to show the browser
COOLHOLE_HEADLESS=true
COOLHOLE_FORCE_FRESH=false
COOLHOLE_SKIP_FINAL_ALLOW=true
BOT_USERNAME=Slunt
# Never commit real passwords; set locally only
BOT_PASSWORD=

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://coolhole.org

# Toggle Coolhole automation (Playwright). Set to 'false' to disable completely.
ENABLE_COOLHOLE=true
# Explicit opt-in for credentialed login; if false or missing, guest mode is used
COOLHOLE_LOGIN_ENABLED=true

# CoolPoints Configuration
COOLPOINTS_STARTING_BALANCE=1000
COOLPOINTS_DAILY_BONUS=100
COOLPOINTS_MAX_DEBT=-5000

# Bot Configuration
BOT_PREFIX=!
BOT_ADMIN_USERS=admin,moderator

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Security
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here